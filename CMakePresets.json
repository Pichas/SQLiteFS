{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "description": "Base configuration",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "clang",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "cl",
            "inherits": [
                "default"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "clang",
            "configurePreset": "clang"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang",
            "configuration": "Release"
        },
        {
            "name": "cl",
            "configurePreset": "cl"
        }
    ]
}